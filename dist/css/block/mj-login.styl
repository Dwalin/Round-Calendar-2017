.mj-login {


  &__overlay {
    position: fixed;
    z-index: 200;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: rgba(0, 0, 0, .15);
  }

  &__additional {
    display: flex;
    flex-direction: column;
    align-items: center;

    &>* {
      margin-bottom: 10px;
    }
  }

  &__box {
    background-color: rgba(255, 255, 255, 1);
    padding: 40px 60px 10px;
    max-width: 420px;

    margin: 20px;

    text-align: center;

    box-shadow: 0 8px 32px -16px rgba(0, 0, 0, 1);

    &>* {
      margin-bottom: 20px;
      width: 100%;
    }
  }

  &__header {
    line-height: 35px;
  }

  &__description {
    opacity: .5;
  }



}


  .mj-input {
    height: 50px;
    line-height: 50px;

    margin-bottom: 20px;
    width: 100%;

    border-radius: 2px;

    border: 1px solid rgba(0, 0, 0, .15);
    padding-left: 5px;
  }

  .mj-button {
    height: 50px;
    line-height: 50px;
    color: white;
    font-size: 120%;

    border: none;

    border-radius: 2px;
    background-color: $c-main;

    transition: .15s all ease-in-out;

    cursor: pointer;

    &:hover {
      background-color: lighten($c-main, 5);
    }
  }


  .mj-link {
    text-decoration: none;
    color: $c-main;
    padding-bottom: 4px;
    border-bottom: 1px solid alpha($c-main, .15);

    transition: .15s all ease-in-out;

    &:hover {
      border-bottom: 1px solid alpha($c-main, .5);
    }
  }