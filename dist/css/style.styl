@import 'normalize.css';


body {
  overflow: hidden;
  /*font-family: 'Bad Script', cursive;*/
  font-family: 'Roboto', serif;
  font-weight: 200;
  font-size: 14px;
  line-height: 20px;
}

$c-main = rgba(0, 70, 140, 1);

body * {
  box-sizing: border-box;
}

  .mj-calendar {
    position: relative;
    width: 100%;
    height: 100%;

    transform: translateZ(0);

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: #fff;

    box-shadow: 0 4px 8px -4px rgba(0, 0, 0, .25);

    * {
      shape-rendering: auto;
    }

    &__month {
      font-size: 10px;
      font-family: 'Bad Script', cursive;
    }

    &__note {
      fill: darken($c-main, 40);
      font-size: 4px;
      font-family: 'Bad Script', cursive;
    }

    &__date {
      font-size: 2.5px;
      opacity: .5;
      //font-family: 'Bad Script', cursive;

      &__weekend {
        fill: rgba(0, 0, 140, 1);
      }

      &Wrap {
        width: 20px;
        height: 20px;
        overflow: visible !important;

        transition: all .25s ease-in-out;
        //opacity: 0;
        //display: none;
      }
    }

    &__day {

      &:hover {
        .mj-calendar__dateWrap {
          opacity: 1;
          display: block;
        }
      }
    }

    &__line {
      stroke: alpha($c-main, .1);
      stroke-width: .25;
      fill: none;

      &._additional {
        stroke: rgba(0, 0, 0, .15);
        stroke-width: .25;
        /*display: none;*/
        shape-rendering: geometricPrecision;
      }
    }

    &__circle {
      cursor: pointer;
      transition: .5s all ease-in-out;
      fill: white;
      stroke: alpha($c-main, .25);
      stroke-width: .25;


      &:first-child {
        //fill: rgba(120, 0, 0, 1);
      }

      &._weekend {
        stroke: alpha($c-main, .25);
      }

      &:hover {
        stroke: alpha($c-main, 0);
        fill: lighten($c-main, 20);
      }
    }

    svg {
      border: 1px solid rgba(0, 0, 0, .1);
    }

    &__svg {
      max-width: 100%;
      max-height: 100%;
      margin: 0 auto;
    }

    &__wrapper {
      width: 100vw;
      height: 100vh;

      padding: 20px;

      position: relative;
      z-index: 100;

      background-color: rgba(0, 0, 0, .05);
      //overflow: hidden;
    }
  }


@import 'block/mj-login.styl';




// overrides

.ui-datepicker {
  border: none !important;

  background: rgba(255, 255, 255, 1) !important;
  box-shadow: 0 4px 8px -4px rgba(0, 0, 0, .25);

  margin-left: -20px;
  display: flex;
  flex-direction: column;
  align-items: center;

  &-header {
    padding: 10px 20px;
    display: flex;
    background: none !important;
    color: $c-main;
    border: none !important;
  }

  &-calendar {

    thead {
      th {
        font-weight: 200;
        font-size: 80%;
        opacity: .25;
      }

    }

  }
}

.ui-state-default {
  width: 100%;
  min-width: 100%;
  display: block;
  text-align: center;
  text-decoration: none;
  color: $c-main;
  font-family: 'Roboto', serif;
  border: none !important;
  background: none !important;
  font-weight: 200;
  font-size: 12px;
  padding: 10px;
}

  .ui-state-hover {
    background: alpha($c-main, .15) !important;
    color: $c-main !important;
  }

  .ui-datepicker-prev {order: 1;}
  .ui-datepicker-title {
    order: 2;
    color: rgba(80, 80, 80, 1);
  }
  .ui-datepicker-next {order: 3;}